<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<sanwaf>
	<global-settings>
		<enabled>true</enabled>
		<verbose>false</verbose>
		<app.version>=${yourapp.release.version}</app.version>	
		<errorHandling>
			<provideTrackId>true</provideTrackId>
			<provideErrors>true</provideErrors>
		</errorHandling>
		<errorMessages>
		</errorMessages>
	</global-settings>
	
	<shields>
		<shield>
			<name>XSS</name>
			<minLen>4</minLen>
			<maxLen>9999</maxLen>
			<regex>
				<minLen>5</minLen>
				<alwaysPerformRegex>
					<enabled>false</enabled>
					<exclusions>
						<item>unitTestStringExcluded</item>
					</exclusions>
				</alwaysPerformRegex>
				<autoRunPatterns>
				</autoRunPatterns>
				<customPatterns>
				</customPatterns>
			</regex>
			<metadata>
				<enabled>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</enabled>
				<caseSensitive>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</caseSensitive>
				<secured>
					<parameters>
						<item><name>allowlistedParameter</name><type>s</type><max></max><min></min><msg></msg><uri></uri></item>
					</parameters>
					<headers>
						<item><name>allowlistedHeader</name><type>s</type><max></max><min></min><msg></msg><uri></uri></item>
					</headers>
					<cookies>
						<item><name>allowlistedCookie</name><type>s</type><max></max><min></min><msg></msg><uri></uri></item>
					</cookies>
				</secured>
			</metadata>
		</shield>
	</shields>
</sanwaf>
