<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<sanwaf>
	<global-settings>
		<enabled>true</enabled>
		<verbose>false</verbose>
		<app.version>=${yourapp.release.version}</app.version>	
		<errorHandling>
			<provideTrackId>true</provideTrackId>
			<provideErrors>true</provideErrors>
		</errorHandling>
		<errorMessages>
			<numeric><![CDATA[  Numeric error msg]]></numeric>
			<numericDelimited><![CDATA[  Numeric delimited error msg {0}]]></numericDelimited>
			<alphanumeric><![CDATA[  Alphanumeric error msg]]></alphanumeric>
			<alphanumericAndMore><![CDATA[  Alphanumeric and more error msg {0}]]></alphanumericAndMore>
			<char><![CDATA[  Character error msg]]></char>
			<string><![CDATA[  String error msg]]></string>
			<regex><![CDATA[  Regex error msg]]></regex>
			<java><![CDATA[  Java error msg]]></java>
			<constant><![CDATA[  Constant error msg {0}]]></constant>
		</errorMessages>
	</global-settings>
	
	<shields>
		<shield>
			<name>XSS</name>
			<minLen>4</minLen>
			<maxLen>9999</maxLen>
			<regex>
				<minLen>5</minLen>
				<alwaysPerformRegex>
					<enabled>false</enabled>
					<exclusions>
						<item>unitTestStringExcluded</item>
					</exclusions>
				</alwaysPerformRegex>
				<autoRunPatterns>
					<item>
						<key>javascriptExpression</key>
						<value><![CDATA[(?:(?:(?:^)|(?:=|"|'|(?:%(?:2[27]|3D))))|(?:\s|%20)+)(?:(?:j|%[46]a)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:a|%[46]1)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:v|%[57]6)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:a|%[46]1)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:s|%[57]3)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:c|%[46]3)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:r|%[57]2)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:i|%[46]9)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:p|%[57]0)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:t|%[57]4)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:\:|%3a)|(?:v|%[57]6)(?:b|%[46]2)(?:s|%[57]3)(?:c|%[46]3)(?:r|%[57]2)(?:i|%[46]9)(?:p|%[57]0)(?:t|%[57]4)|(?:e|%[64]5)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:x|%[75]8)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:p|%[75]0)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:r|%[75]2)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:e|%[64]5)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:s|%[75]3)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:s|%[75]3)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:i|%[64]9)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:o|%[64]f)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:n|%[64]e)(?:\(|%28))]]></value>
					</item>
					<item>
						<key>xss</key>
						<value><![CDATA[<(|\/|[^\/>][^>]+|\/[^>][^>]+)>]]></value>
					</item>
				</autoRunPatterns>
				<customPatterns>
					<item>
						<key>date</key>
						<value><![CDATA[^\d{4}\-(?:0?[1-9]|1[012])\-(?:0?[1-9]|[12][0-9]|3[01])$]]></value>
					</item>
					<item>
						<key>telephone</key>
						<value><![CDATA[(?:[0-9]{3})(?:[ .-]{1})(?:[0-9]{3})(?:[ .-]{1})(?:[0-9]{4})]]></value>
					</item>
					<item>
						<key>ssn</key>
						<value><![CDATA[(?:^\d{3}-\d{2}-\d{4}$|^XXX-XX-XXXX$)]]></value>
					</item>
				</customPatterns>
			</regex>
			<metadata>
				<enabled>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</enabled>
				<caseSensitive>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</caseSensitive>
				<secured>
					<parameters>
						<item>foounitTestNumeric=N:::foounitTestNumericDelimited=N{,}</item>
						<item>foounitTestAlphanumeric=A:::foounitTestAlphanumericAndMore=A{? :}:::foounitTestChar=C:::foounitTestString=S</item>
						<item>foounitTestCustomRegexSSN=R{ssn}</item>
						<item>foounitTestCustomTel=R{telephone}(12,12)</item>
						<item>foounitTestCustomDate=R{date}</item>

						<item>footestXssVariable[*].key:::foounitTestString</item>
						<item>foovUnitTestChar[*].key=C:::foovUnitTestNumeric[*].key=N:::foovUnitTestNumericDelimited[*].key=N{,}:::foovUnitTestAlphanumeric[*].key=A:::foovUnitTestAlphanumericAndMore[*].key=A{? :}:::foovUnitTestString[*].key=S</item>
						<item>fooaFoo[*].bar=N{,}:::foobFoo(*).bar=N{,}:::foocFoo[*]=N{,}:::foodFoo(*)=N{,}:::fooeFoo-*=N{,}:::foofFoo*=N{,}:::foogA*=S:::foogB*=N{,}</item>
					</parameters>
					<headers>
					</headers>
					<cookies>
					</cookies>
				</secured>
			</metadata>
		</shield>
	</shields>
</sanwaf>
