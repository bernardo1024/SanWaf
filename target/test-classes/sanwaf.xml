<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<sanwaf>
	<global-settings>
		<enabled>true</enabled>
		<verbose>false</verbose>
		<app.version>=${Your_Application_Release_Version}</app.version>	
		<errorHandling>
			<provideTrackId>true</provideTrackId>
			<provideErrors>true</provideErrors>
		</errorHandling>
		<errorMessages>
			<numeric><![CDATA[  Numeric error msg]]></numeric>
			<numericDelimited><![CDATA[  Numeric delimited error msg {0}]]></numericDelimited>
			<alphanumeric><![CDATA[  Alphanumeric error msg]]></alphanumeric>
			<alphanumericAndMore><![CDATA[  Alphanumeric and more error msg {0}]]></alphanumericAndMore>
			<char><![CDATA[  Character error msg]]></char>
			<string><![CDATA[  String error msg]]></string>
			<regex><![CDATA[  Regex error msg]]></regex>
			<java><![CDATA[  Java error msg]]></java>
			<constant><![CDATA[  Constant error msg {0}]]></constant>
		</errorMessages>
	</global-settings>
	
	<shields>
		<shield>
			<name>XSS</name>
			<minLen>3</minLen>
			<maxLen>9999</maxLen>
			<regex>
				<minLen>5</minLen>
				<alwaysPerformRegex>
					<enabled>false</enabled>
					<exclusions>
						<item>unitTestStringExcluded</item>
					</exclusions>
				</alwaysPerformRegex>
				<autoRunPatterns>
					<item>
						<key>javascriptExpression</key>
						<value><![CDATA[(?:(?:(?:^)|(?:=|"|'|(?:%(?:2[27]|3D))))|(?:\s|%20)+)(?:(?:j|%[46]a)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:a|%[46]1)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:v|%[57]6)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:a|%[46]1)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:s|%[57]3)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:c|%[46]3)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:r|%[57]2)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:i|%[46]9)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:p|%[57]0)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:t|%[57]4)(?:(?:&|%26)(?:.)*?(?:;|%3b))*?(?:\:|%3a)|(?:v|%[57]6)(?:b|%[46]2)(?:s|%[57]3)(?:c|%[46]3)(?:r|%[57]2)(?:i|%[46]9)(?:p|%[57]0)(?:t|%[57]4)|(?:e|%[64]5)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:x|%[75]8)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:p|%[75]0)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:r|%[75]2)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:e|%[64]5)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:s|%[75]3)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:s|%[75]3)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:i|%[64]9)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:o|%[64]f)(?:(?:\/|%2f)(?:\*|%2a).*?(?:\*|%2a)(?:\/|%2f))*?(?:n|%[64]e)(?:\(|%28))]]></value>
					</item>
					<item>
						<key>xss</key>
						<value><![CDATA[<(|\/|[^\/>][^>]+|\/[^>][^>]+)>]]></value>
					</item>
				</autoRunPatterns>
				<customPatterns>
					<item>
						<key>date</key>
						<value><![CDATA[^\d{4}\-(?:0?[1-9]|1[012])\-(?:0?[1-9]|[12][0-9]|3[01])$]]></value>
					</item>
					<item>
						<key>telephone</key>
						<value><![CDATA[(?:[0-9]{3})(?:[ .-]{1})(?:[0-9]{3})(?:[ .-]{1})(?:[0-9]{4})]]></value>
					</item>
					<item>
						<key>ssn</key>
						<value><![CDATA[(?:^\d{3}-?\d{2}-?\d{4}$|^XXX-XX-XXXX$)]]></value>
					</item>
				</customPatterns>
			</regex>
			<metadata>
				<enabled>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</enabled>
				<caseSensitive>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</caseSensitive>
				<secured>
					<parameters>
						<item>aParameterNumber=n</item>
						<item>lengthA_0_3=a(0,3):::lengthAA_0_4=a{:}(0,4):::lengthN_0_5=n(0,5):::lengthNN_6_6=n{,}(6,6):::lengthS_0_7=s(0,7):::lengthC_1_1=c:::lengthR_0_11=r{ssn}(0,11)</item>
						<item>lengthA2_0_3=a(0,3):::lengthAA2_0_4=a{:}(0,4):::lengthN2_0_5=n(0,5):::lengthNN2_6_6=n{,}(6,6):::lengthS2_0_7=s(0,7):::lengthC2_1_1=c:::lengthR2_0_11=r{ssn}(0,11)</item>
						<item>unitTestNumeric=n</item>
						<item>unitTestNumericDelimited=n{,}</item>
						<item>unitTestNumericDelimitedInvalidConfig1=n{,</item>
						<item>unitTestNumericDelimitedInvalidConfig2=n,}</item>
						<item>unitTestNumericDelimitedInvalidConfig3=n,</item>
						<item>unitTestAlphanumeric=a</item>
						<item>unitTestAlphanumericAndMore=a{?\s:}</item>
						<item>unitTestAlphanumericAndMoreSpecialChars=a{\s\t\n\r}</item>
						<item>unitTestAlphanumericAndMoreCurlyBraces=a{{}}</item>
						<item>unitTestAlphanumericAndMoreInvalidConfig1=a{? :</item>
						<item>unitTestAlphanumericAndMoreInvalidConfig2=a?} :</item>
						<item>unitTestAlphanumericAndMoreInvalidConfig3=a? :</item>
						<item>unitTestString=s</item>
						<item>unitTestChar=c</item>
						<item>unitTestCustomTel=r{telephone}(12,12):::unitTestCustomDate=r{date}:::unitTestCustomRegexSSN=r{ssn}</item>
						<item>unitTestConstant=k{FOO,BAR,FAR}</item>
						<item>unitTestJava=j{com.sanwaf.core.JavaClass.over10TrueElseFalse()}</item>
						<item>unitTestJavaMultiParm=j{com.sanwaf.core.JavaClass.multiParmsNotEqual()}</item>
						<item>unitTestJavaInvalidClass=j{com.sanwaf.core.JavaClassFOOBAR.over10trueElseFalse()}</item>
						<item>unitTestJavaInvalidMethod=j{com.sanwaf.core.JavaClass.foobar()}</item>
					</parameters>
					<headers>
						<item>aHeaderNumber=n</item>
					</headers>
					<cookies>
						<item>aCookieNumber=n</item>
					</cookies>
				</secured>
			</metadata>
		</shield>
		
		<shield>
			<name>ParmLength</name>
			<minLen>-1</minLen>
			<maxLen>-1</maxLen>
			<regex>
				<minLen>-1</minLen>
				<alwaysPerformRegex>
					<enabled>false</enabled>
				</alwaysPerformRegex>
				<autoRunPatterns></autoRunPatterns>
				<customPatterns></customPatterns>
			</regex>
			<metadata>
				<enabled>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</enabled>
				<caseSensitive>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</caseSensitive>
				<secured>
					<parameters>
						<item>unitTestMaxMinLen=s(-1,-1)</item>
					</parameters>
					<headers></headers>
					<cookies></cookies>
				</secured>
			</metadata>
		</shield>
	
	</shields>
</sanwaf>
